{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/your-org/sitecore-yaml-schemas/main/pagetypes-schema.json",
  "title": "Sitecore Page Types Configuration",
  "description": "JSON Schema for Sitecore pagetypes.yaml configuration file",
  "type": "object",
  "required": ["pagetypes"],
  "properties": {
    "pagetypes": {
      "type": "array",
      "description": "List of page type definitions",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Page type name (free format)",
            "minLength": 1,
            "examples": ["Content Page", "Landing Page", "FAQ Page"]
          },
          "fields": {
            "type": "array",
            "description": "Page type fields",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Field name (free format)",
                  "minLength": 1,
                  "examples": ["Heading", "Text", "BackgroundImage", "PrimaryButton"]
                },
                "type": {
                  "type": "string",
                  "description": "Field type from supported Sitecore field types",
                  "enum": [
                    "Single-Line Text",
                    "Date",
                    "DateTime", 
                    "Checkbox",
                    "File",
                    "Image",
                    "Integer",
                    "Multi-Line Text",
                    "Number",
                    "Rich Text",
                    "Checklist",
                    "Droplist",
                    "Multilist",
                    "Treelist",
                    "Taglist",
                    "Multiroot Treelist",
                    "Droplink",
                    "General Link"
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "standardvalues": {
            "type": "array",
            "description": "Standard component layouts for this page type",
            "items": {
              "type": "object",
              "patternProperties": {
                "^.*$": {
                  "type": "object",
                  "required": ["placeholder"],
                  "properties": {
                    "placeholder": {
                      "type": "string",
                      "description": "Placeholder name where component is placed",
                      "minLength": 1,
                      "examples": ["main", "left-column", "right-column", "sidebar"]
                    },
                    "components": {
                      "type": "array",
                      "description": "Nested components within this component",
                      "items": {
                        "anyOf": [
                          {
                            "type": "string",
                            "description": "Simple component reference or variant",
                            "minLength": 1,
                            "examples": ["Default", "HeaderAndNoImage", "One Column"]
                          },
                          {
                            "type": "object",
                            "description": "Component with nested structure",
                            "patternProperties": {
                              "^.*$": {
                                "type": "object",
                                "required": ["placeholder"],
                                "properties": {
                                  "placeholder": {
                                    "type": "string",
                                    "description": "Placeholder name",
                                    "minLength": 1,
                                    "examples": ["left-column", "right-column", "content-area"]
                                  },
                                  "components": {
                                    "type": "array",
                                    "description": "Further nested components",
                                    "items": {
                                      "anyOf": [
                                        {
                                          "type": "string",
                                          "description": "Component reference",
                                          "minLength": 1,
                                          "examples": ["One Column", "Two Columns", "Card"]
                                        },
                                        {
                                          "type": "object",
                                          "description": "Deeply nested component structure",
                                          "patternProperties": {
                                            "^.*$": {
                                              "type": "object",
                                              "required": ["placeholder"],
                                              "properties": {
                                                "placeholder": {
                                                  "type": "string",
                                                  "minLength": 1
                                                },
                                                "components": {
                                                  "type": "array",
                                                  "items": {
                                                    "type": "string",
                                                    "minLength": 1
                                                  }
                                                }
                                              },
                                              "additionalProperties": false
                                            }
                                          },
                                          "additionalProperties": false
                                        }
                                      ]
                                    }
                                  }
                                },
                                "additionalProperties": false
                              }
                            },
                            "additionalProperties": false
                          }
                        ]
                      }
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
} 